<div class="container">
      <% @all_events_pending.each do |event| %>

        <div class="row">
          <div class="col-md-4">
            <h2><%= event.title%> </h2>
            <p> <%= event.description %> </p>
            <p><a class="btn btn-secondary" href="<%= event_path(event.id) %>" role="button">Voir l'événement &raquo;</a></p>
            <p><a class="btn btn-secondary" href="<%= event_submission_path(event.id) %>" data-method="PATCH" role="button">Valider l'événement &raquo;</a></p>
          </div>
        </div>
      <%end%>
        <hr>

      </div> <!-- /container -->

    </main>
